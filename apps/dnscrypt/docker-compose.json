{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "dnscrypt-server",
      "image": "jedisct1/dnscrypt-server:latest",
      "internalPort": 443,
      "isMain": true,
      "ports": [
        {
          "containerPort": 443,
          "protocol": "udp"
        },
        {
          "containerPort": 443,
          "protocol": "tcp"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/dnscrypt-server/keys",
          "containerPath": "/opt/encrypted-dns/etc/keys"
        }
      ],
      "environment": {
        "SERVER_IP": "${SERVER_IP}",
        "DOMAIN_NAME": "${DOMAIN_NAME}"
      },
      "command": [
        "sh",
        "-c",
        "if [ ! -f /opt/encrypted-dns/etc/keys/signed_provider.key ]; then dnscrypt-server init -N ${DOMAIN_NAME} -E ${SERVER_IP}:443; fi && dnscrypt-server start"
      ],
      "restart": "unless-stopped",
      "healthcheck": {
        "test": ["CMD-SHELL", "nc -z -w 1 localhost 443"],
        "interval": "1m",
        "timeout": "10s",
        "retries": 3
      }
    }
  ]
}
