{
  "version": "3.8",
  "services": {
    "alist": {
      "image": "xhofe/alist:latest",
      "container_name": "alist",
      "restart": "unless-stopped",
      "environment": [
        "PUID=$PUID",
        "PGID=$PGID",
        "TZ=$TZ",
        "ADMIN_PASSWORD=$ADMIN_PASSWORD"
      ],
      "ports": [
        "5244:5244"
      ],
      "volumes": [
        "/root/runtipi/app-data/alist/data:/opt/alist/data"
      ],
      "networks": [
        "default"
      ],
      "security_opt": [
        "no-new-privileges:true"
      ],
      "healthcheck": {
        "test": [
          "CMD",
          "curl",
          "-f",
          "http://localhost:5244"
        ],
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    }
  }
}
