{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "dnscrypt-server",
      "image": "jedisct1/dnscrypt-server:latest",
      "internalPort": 443,
      "isMain": true,
      "ports": [
        {
          "containerPort": 443,
          "protocol": "udp"
        },
        {
          "containerPort": 443,
          "protocol": "tcp"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/dnscrypt-server/keys",
          "containerPath": "/opt/encrypted-dns/etc/keys"
        }
      ],
      "environment": {
        "SERVER_IP": "${SERVER_IP}"
      },
      "restart": "unless-stopped"
    }
  ]
}
