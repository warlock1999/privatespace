{
  "$schema": "../dynamic-compose-schema.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "alist",
      "image": "xhofe/alist:latest",
      "internalPort": 5244,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/alist",
          "containerPath": "/data"
        },
        {
          "hostPath": "${APP_DATA_DIR}/config/alist",
          "containerPath": "/config"
        }
      ],
      "environment": {
        "ADMIN_PASSWORD": "changeme",
        "PUID": "1000",
        "PGID": "1000"
      },
      "restart": "unless-stopped",
      "healthcheck": {
        "test": ["CMD", "curl", "-f", "http://localhost:5244"],
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    }
  ]
}
