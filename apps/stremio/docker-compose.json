{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "stremio",
      "image": "sleeyax/stremio-streaming-server:latest",
      "internalPort": 11470,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/stremio",
          "containerPath": "/root/.stremio-server"
        }
      ],
      "environment": {
        "NODE_ENV": "production"
        "FIX_UNSUPPORTED_MEDIA": "1",
      },
      "restart": "unless-stopped"
    }
  ]
}