{
  "schemaVersion": 2,
  "services": [
    {
      "name": "alist",
      "image": "xhofe/alist:latest",
      "restart": "unless-stopped",
      "environment": {
        "PUID": "${PUID}",
        "PGID": "${PGID}",
        "UMASK": "022",
        "ADMIN_PASSWORD": "${ADMIN_PASSWORD}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/opt/alist/data"
        },
        {
          "hostPath": "/runtipi/media",
          "containerPath": "/www/wwwroot"
        }
      ],
      "isMain": true,
      "internalPort": 5244
    }
  ]
}