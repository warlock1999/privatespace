{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "sickgear",
      "image": "sickgear/sickgear:latest",
      "internalPort": 8081,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/sickgear",
          "containerPath": "/config"
        }
      ],
      "environment": {
        "APP_PORT": "${APP_PORT}",
        "NODE_ENV": "production"
      },
      "restart": "unless-stopped",
      "healthcheck": {
        "test": ["CMD", "curl", "-f", "http://localhost:8080"],
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    }
  ]
}
