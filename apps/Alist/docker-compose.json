{
  "schemaVersion": 2,
  "services": [
    {
      "name": "0",
      "image": "xhofe/alist:latest",
      "environment": [
        {
          "key": "ADMIN_PASSWORD",
          "value": "changeme"
        },
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/alist",
          "containerPath": "/data",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/config/alist",
          "containerPath": "/config",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "CMD curl -f http://localhost:5244",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    }
  ]
}