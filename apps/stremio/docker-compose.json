{
  "version": "3.8",
  "services": {
    "stremio-streaming-server": {
      "image": "sleeyax/stremio-streaming-server:1.0.0", 
      "container_name": "stremio-streaming-server",
      "ports": [
        {
          "published": "${APP_PORT}",
          "target": 11470
        }
      ],
      "volumes": [
        "${APP_DATA_DIR}/stremio-streaming-server:/root/.stremio-server"
      ],
      "environment": {
        "FORCE_HTTPS": "true",
        "FIX_UNSUPPORTED_MEDIA": "true"
      },
      "networks": [
        "tipi_main_network"
      ],
      "healthcheck": {
        "test": ["CMD", "curl", "-f", "http://localhost:11470"],
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    }
  },
  "networks": {
    "tipi_main_network": {
      "external": true
    }
  }
}
