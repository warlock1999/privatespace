{
  "schemaVersion": 2,
  "services": [
    {
      "name": "alist",
      "image": "xhofe/alist:latest",
      "isMain": true,
      "internalPort": "5244",
      "environment": {
        "PUID": "1000",
        "PGID": "1000",
        "UMASK": "022",
        "ADMIN_PASSWORD": "changeme",
        "ADMIN_USER": "admin"
      },
      "volumes": [
        {
          "containerPath": "/opt/alist/data",
          "hostPath": "${APP_DATA_DIR}/alist/data",
          "readOnly": false,
          "shared": false,
          "private": true
        }
      ],
      "addPorts": [
        {
          "containerPort": 5244,
          "hostPort": 5244,
          "tcp": true,
          "udp": true
        }
      ]
    }
  ]
}
